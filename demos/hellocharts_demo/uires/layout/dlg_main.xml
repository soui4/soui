<?xml version="1.0" encoding="utf-8"?>
<SOUI name="mainWindow" title="HelloCharts Demo" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" width="800" height="600" margin="5,5,5,5" resizable="1" wndType="appMain" translucent="1"  margin="5,5,5,5">
  <root skin="_skin.sys.wnd.bkgnd" cache="1" layout="vbox">
    <!-- Title bar -->
    <caption size="-2,30" layout="hbox" gravity="center">
      <icon size="-1,-1" src="ICON_LOGO:16"/>
      <text size="-1,-1" extend_left="5" font="name:test,bold:1">@string/title</text>
      <window size="0,0" weight="1" visible="0"/>
      <imgbtn size="-1,-1" name="btn_min" skin="_skin.sys.btn.minimize"  animate="1" />
      <window size="-1,-1">
        <imgbtn pos="0,0" name="btn_max" skin="_skin.sys.btn.maximize"  animate="1" />
        <imgbtn pos="0,0" name="btn_restore" skin="_skin.sys.btn.restore"  show="0" animate="1" />
      </window>
      <imgbtn size="-1,-1" name="btn_close" skin="_skin.sys.btn.close"  tip="close" animate="1"/>
    </caption>
    
    <!-- Main content area -->
    <window layout="vbox" size="-2,0" weight="1" padding="5">
      <!-- Control panel -->
      <window layout="hbox" size="-2,40" margin="0,0,0,10">
        <button name="btn_generate_data" class="cls_btn_border" width="120" height="30" margin="0,5,10,5">Generate Data</button>
        <button name="btn_clear_data" class="cls_btn_border" width="100" height="30" margin="0,5,10,5">Clear Data</button>
        <button name="btn_toggle_animation" class="cls_btn_border" width="120" height="30" margin="0,5,10,5">Disable Animation</button>
        <button name="btn_replay_animation" class="cls_btn_border" width="120" height="30" margin="0,5,10,5">Replay Animation</button>
        <button name="btn_test_pie" class="cls_btn_border" width="130" height="30" margin="0,5,10,5">Test Pie Scenarios</button>
        <window weight="1"/>
        <text name="txt_status" width="300" height="30" margin="0,5,0,5" textAlign="right|vcenter">Ready</text>
      </window>
      
      <!-- Chart area -->
      <window layout="hbox" size="-2,0" weight="1" >
        <!-- Chart tabs -->
        <tabctrl name="chart_tabs" size="0,-2" weight="1" margin="10,10,10,10" tabAlign="top" tabHeight="30" curSel="5">
          <page title="Line Chart">
            <lineChart name="line_chart" size="-2,-2"
                       interactive="1" zoomEnabled="1" scrollEnabled="1"
                       animationDuration="500"/>
          </page>
          <page title="Column Chart">
            <columnChart name="column_chart" size="-2,-2"
                         interactive="1" fillRatio="0.75"
                         animationDuration="500"/>
          </page>
          <page title="Pie Chart">
            <pieChart name="pie_chart" size="-2,-2"
                      interactive="1"
                      animationDuration="500"/>
          </page>
          <page title="Bubble Chart">
            <bubbleChart name="bubble_chart" size="-2,-2"
                         interactive="1"
                         animationDuration="800"/>
          </page>
          <page title="Radar Chart">
            <radarChart name="radar_chart" size="-2,-2"
                        interactive="1"
                        animationDuration="1000"/>
          </page>
          <page title="Combo Chart">
            <comboChart name="combo_chart" size="-2,-2"
                        interactive="1"
                        animationDuration="1200"/>
          </page>
        </tabctrl>

        <!-- Info panel -->
        <window size="200,-2" layout="vbox" margin="10,10,10,10">
          <text height="25" textAlign="left|vcenter" font="adding:2">Chart Information:</text>
          
          <window height="2" colorBkgnd="#cccccc" margin="0,5,0,10"/>
          
          <text height="20" textAlign="left|vcenter">• Interactive: Yes</text>
          <text height="20" textAlign="left|vcenter">• Zoom: Mouse wheel</text>
          <text height="20" textAlign="left|vcenter">• Pan: Mouse drag</text>
          <text height="20" textAlign="left|vcenter">• Select: Click point</text>
          
          <window height="2" colorBkgnd="#cccccc" margin="0,10,0,10"/>
          
          <text height="20" textAlign="left|vcenter" font="adding:1">Features:</text>
          <text height="20" textAlign="left|vcenter">• Multiple chart types</text>
          <text height="20" textAlign="left|vcenter">• Value labels</text>
          <text height="20" textAlign="left|vcenter">• Color customization</text>
          <text height="20" textAlign="left|vcenter">• Smooth animation</text>
          <text height="20" textAlign="left|vcenter">• Interactive selection</text>
          
          <window height="2" colorBkgnd="#cccccc" margin="0,10,0,10"/>
          
          <text height="20" textAlign="left|vcenter" font="adding:1">Controls:</text>
          <text height="16" textAlign="left|vcenter" font="size:11">Generate Data: Create random sample data</text>
          <text height="16" textAlign="left|vcenter" font="size:11">Clear Data: Remove all chart data</text>
          <text height="16" textAlign="left|vcenter" font="size:11">Toggle Animation: Enable/disable animations</text>
          
          <window weight="1"/>
          
          <!-- Selection info -->
          <text name="txt_selection_info" height="60" textAlign="left|top" font="size:10" colorText="#333333" multiLines="1">
            Click on chart elements to see selection details here.
          </text>
        </window>
      </window>
    </window>
  </root>
</SOUI>
