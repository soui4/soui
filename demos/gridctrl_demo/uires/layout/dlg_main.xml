<?xml version="1.0" encoding="utf-8"?>
<SOUI name="mainWindow" title="SOUI GridCtrl Demo" bigIcon="ICON_LOGO:32" smallIcon="ICON_LOGO:16" width="800" height="600" margin="5,5,5,5" resizable="1" wndType="appMain">
  <root skin="_skin.sys.wnd.bkgnd" cache="1" layout="vbox">
    <caption size="-2,30" layout="hbox" gravity="center" padding="5,0,5,0">
      <icon size="-1,-1" src="ICON_LOGO:16"/>
      <text size="-1,-1" extend_left="5" font="name:test,bold:1">@string/title</text>
      <window size="0,0" weight="1" visible="0"/>
      <imgbtn size="-1,-1" name="btn_min" skin="_skin.sys.btn.minimize"  animate="1" />
      <window size="-1,-1">
        <imgbtn pos="0,0" name="btn_max" skin="_skin.sys.btn.maximize"  animate="1" />
        <imgbtn pos="0,0" name="btn_restore" skin="_skin.sys.btn.restore"  show="0" animate="1" />
      </window>
      <imgbtn size="-1,-1" name="btn_close" skin="_skin.sys.btn.close"  tip="close" animate="1"/>
    </caption>
    
    <window size="-2,0" weight="1" layout="vbox">
      <text  text="SOUI GridCtrl Demo - Enhanced Cell Types" font="size:14,weight:bold"/>
      <text  text="Features: Color Picker Cells, DateTime Picker Cells, Type-aware Copy/Paste" font="size:10" colorText="#666666"/>

      <window size="-2,0" weight="1" layout="hbox" interval="5">
        <!-- Grid Control -->
        <gridctrl name="grid_test" size="0,-2" weight="1"
                  rowCount="10" 
                  colCount="5" 
                  fixedRows="1" 
                  fixedCols="1" 
                  defRowHeight="25" 
                  defColWidth="100" 
                  gridLines="3" 
                  gridLineColor="#C8C8C8" 
                  gridBkColor="#FFFFFF" 
                  editable="1"/>
        <window size="200,-2" layout="vbox" interval="5">
          <text text="Cell Types:" font="size:12,weight:bold"/>
          <text text="• Column 4: Color Picker" font="size:9"/>
          <text text="• Column 5: DateTime Picker" font="size:9"/>
          <text text="• Column 6: Checkbox" font="size:9"/>
          <text text="• Column 7: URL Links" font="size:9"/>
          <text text="" size="-2,5"/>
          <text text="Instructions:" font="size:12,weight:bold"/>
          <text text="• Click color cells to pick colors" font="size:9"/>
          <text text="• Click datetime cells for picker" font="size:9"/>
          <text text="• Copy/paste respects cell types" font="size:9"/>
          <text text="• Use Ctrl+C/V for copy/paste" font="size:9"/>
          <text text="" size="-2,10"/>
          <button name="btn_merge" text="Merge Cells" width="120" height="25" tip="Merge selected cells"/>
          <button name="btn_unmerge" text="Unmerge Cells" width="120" height="25" tip="Unmerge selected cells"/>
        </window>
      </window>
      <!-- Status bar -->
      <window size="-2,30" colorBkgnd="#F0F0F0">
        <text pos="10,5,-10,-5" text="Ready - Click color/datetime cells to test new features. Copy/paste between same cell types."/>
      </window>
    </window>
  </root>
</SOUI>
